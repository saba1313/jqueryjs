  <individual_demos>
    <demoset name="drag-drop">
      <demo title="Basic dragging">
        <description>
          This is the basic drag 'n drop.  Notice how <em>easy</em> it is to do this!
          At the moment, dropping does nothing.  We'll get to that in the next example.
        </description>
        <html>
          <div id="drag-1">
            Drag me!
          </div>
          <div id="drop-1">
            Drop on me
          </div>
        </html>
        <javascript>
          $('#drag-1').draggable();
          $('#drop-1').droppable();
        </javascript>
      </demo>
    </demoset>
    <demo name="sortable">
      <description>
        This is a very basic sortable.
      </description>
      <html>
        <ul id="sortable">
          <li>Item 1</li>
          <li>Item 2</li>

          <li>Item 3</li>
          <li>Item 4</li>
          <li>Item 5</li>
          <li>Item 6</li>
        </ul>
      </html>
      <javascript>
        $('#sortable').sortable();
      </javascript>
    </demo>
  </individual_demos>
  <themes>
    <theme name="light">Light</theme>
    <theme name="dark">Dark</theme>
  </themes>
</demos>